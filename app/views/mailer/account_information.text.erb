<% if @user.auth_source %><%= l(:ldap_activation_message,:name=> (@user.firstname + " " + @user.lastname),:ldap=>h(@user.auth_source.name)) %>
<% else %><%= l(:mail_body_account_information) %>:
* <%= l(:field_login) %>: <%= @user.login %>
* <%= l(:field_password) %>: <%= @password %>
<% end %>
<%= l(:label_login) %>: <%= @login_url %>
